@model ClockStore.DTO.WallPaper
@using WebApp.App_Code.Base;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}



@using (Html.BeginForm("Create", "WallPaper", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.WallPaperId)
    @Html.HiddenFor(model => model.LangId)

    <div class="form-horizontal">
        <div class="clearfix" style="margin-top:50px"></div>
        <div class="container">

            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        عنوان
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="Title" value="@Model.Title" name="Title" class="form-control" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        تصویر
                    </div>
                    <div class="col-md-8">
                        <input type="file" id="file" name="file" required />
                        <img src="@Url.Action("ShowImage", "Home", new { id = Model.FileId })" style="width:100px;height:100px;" class="thumbnail" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        ترتیب
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="Position" value="@Model.Position" name="Position" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">

                </div>
            </div>
            <div class="row">

                <div class="col-md-2 text-center">
                    توضیحات
                </div>
                <div class="col-md-10">
                    <textarea id="Description" name="Description" style="height:200px" class="form-control">@Model.Description</textarea>

                </div>


            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">

                    </div>
                    <div class="col-md-8">
                        <input type="submit" value="دخیره" class="btn btn-success" />
                        @Html.ActionLink("بازگشت", "Index", "", new { @class = "btn  btn-primary" })
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>

        </div>




    </div>
}


