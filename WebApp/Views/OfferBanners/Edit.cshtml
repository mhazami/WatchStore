@model ClockStore.DTO.OfferBanner

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>تعریف بنر</h2>


@using (Html.BeginForm("Edit", "OfferBanners", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="clearfix" style="margin-top:50px"></div>
        <div class="container">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        عنوان
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        تصویر
                    </div>
                    <div class="col-md-8">
                        <input type="file" class="form-control" id="file" name="file" />
                        <img src="@Url.Action("ShowImage", "Home", new { id = Model.FileId })" style="width:100px;height:100px;" class="thumbnail" />

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        زمان
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Timer, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        فعال است ؟
                    </div>
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.Enable)

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("بازگشت", "Index")
</div>