@using WebApp.App_Code.Base;
@model IEnumerable<ClockStore.DTO.Product>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}



<p style="margin:3% 40% 0 0">
    @Html.ActionLink("تعریف کالای جدید", "Create", "", new { @class = "btn btn-info" })
    <span>
        <button type="button" data-toggle="collapse" class="btn btn-primary" data-target="#search">جستجو</button>
        <a href="/Products/Index" class="btn btn-success">بازگشت</a>
    </span>
</p>



<div class="container">

    <div class="clearfix"> </div>
    <div id="search" class="collapse">
        @using (Html.BeginForm())
        {
            <div class="row">
                <di class="col-md-6">
                    <div class="col-md-4 text-center">
                        نام کالا
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="ProductName" id="ProductName" />
                    </div>

                </di>
                <di class="col-md-6">
                    <div class="col-md-4 text-center">
                        کد کالا
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="Code" id="Code" />
                    </div>

                </di>
            </div>
            <div class="row">
                <di class="col-md-6">
                    <div class="col-md-4 text-center">
                        از قیمت
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="FromPrice" id="FromPrice" />
                    </div>

                </di>
                <di class="col-md-6">
                    <div class="col-md-4 text-center">
                        تا قیمت
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="ToPrice" id="ToPrice" />
                    </div>

                </di>
            </div>

            <div class="row">
                <di class="col-md-6">
                    <div class="col-md-4 text-center">
                        از درصد تخفیف
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="FromOff" id="FromOff" />
                    </div>

                </di>
                <di class="col-md-6">
                    <div class="col-md-4 text-center">
                        تا درصد تخفیف
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="ToOff" id="ToOff" />
                    </div>

                </di>
            </div>

            <div class="row">
                <di class="col-md-6">
                    <div class="col-md-4 text-center">
                        موجودی در انبار
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="Count" id="Count" />
                    </div>

                </di>
                <di class="col-md-6">
                    <div class="col-md-4 text-center">
                        زبان
                    </div>
                    <div class="col-md-8">
                        @Html.Action("GenerateLanguageDropDownList", "Language", null)
                    </div>

                </di>
            </div>

            <div class="row">
                <di class="col-md-6">


                </di>
                <di class="col-md-6">
                    <div class="col-md-4 text-center">

                    </div>
                    <div class="col-md-8">
                        <input type="submit" value="جستجو" class="btn btn-warning" />
                    </div>

                </di>
            </div>


        }
    </div>
</div>
<div class="container-table100">
    <div class="wrap-table100">
        <div class="table100">
            <table>
                <tr class="table100-head">

                    <th class="column1">
                        تصویر
                    </th>
                    <th class="column2">
                        نام کالا
                    </th>
                    <th class="column3">
                        قیمت
                    </th>
                    <th class="column4">
                       افزودن تصویر
                    </th>

                    <th class="column5"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td class="column1">
                            <img alt="@item.ProductName" src="@Url.Action("ShowImage", "Home", new { id = item.FileId })" style="max-height:100px;max-width:100px;" />
                        </td>
                        <td class="column2">
                           @item.ProductName
                        </td>
                        <td class="column3">
                            @item.Price.ToString("N0")
                        </td>
                        <td class="column4">
                            <a href="/ExtraImages/ProductImages?id=@item.ProductId" class="btn btn-primary">افزودن تصویر</a>
                        </td>
                        <td class="column5">
                            @Html.ActionLink("ویرایش", "Edit", new { id = item.ProductId }) |
                            @Html.ActionLink("جزییات", "Details", new { id = item.ProductId }) |
                            @Html.ActionLink("حذف", "Delete", new { id = item.ProductId })
                        </td>
                    </tr>
                }

            </table>
          
        </div>
    </div>
</div>


