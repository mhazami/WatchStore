    <script>
        $(document).ready(function () {
            $('.item-product-content').slick({
                slidesToShow: 4,
                autoplay: true,
                autoplaySpeed: 1500,
                rtl: true,
                arrows: false, infinite: false,
                dots: false,
                pauseOnHover: false,
                responsive: [{
                    breakpoint: 768,
                    settings: {
                        slidesToShow: 2
                    }
                }, {
                    breakpoint: 520,
                    settings: {
                        slidesToShow: 1
                    }
                }]
            });
        });
    </script>
<input type="hidden" id="Id" value="@Model.ProductId" />
<div class="single contact">
