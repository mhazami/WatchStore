@using WebApp.App_Code.Base;
@model List<ClockStore.DTO.Product>



<div class="product">
    <div class="container">
        <div class="product-top">

            @{
                var rep = Model.Count() / 4;
                var j = 0;
                do
                {
                    <div class="product-one">
                        @{

                            for (int i = 0; i < Model.Count(); i++)
                            {
                                if (rep < (Model.Count() / 4))
                                {
                                    i = j + 1;
                                }
                                <div class="col-md-3 product-left">
                                    <div class="product-main simpleCart_shelfItem">
                                        <a href="/Products/ProductDetails?id=@Model[i].ProductId" class="mask"><img class="img-responsive zoom-img" src="@FileManager.ImageHandler(Model[i].FileId)" alt="@Model[i].ProductName" /></a>
                                        <div class="product-bottom">
                                            <h3>@Model[i].ProductName</h3>
                                            <p>Explore Now</p>
                                            <h4>
                                                <a class="item_add" href="#"><i></i></a> <span class=" item_price">$@Model[i].Price.ToString("N0")</span>
                                                @{
                                                    if (Model[i].Off != 0)
                                                    {
                                                        <span class="srchbottom">-@Model[i].Off%</span>
                                                    }
                                                }
                                            </h4>

                                        </div>
                                        @*<div class="srch">
                                                <span>-50%</span>
                                            </div>*@
                                    </div>
                                </div>


                                j = i;
                                if (((i + 1) % 4) == 0)
                                {
                                    <div class="clearfix"></div>
                                    break;
                                }
                            }
                        }
                    </div>

                    rep--;
                } while (rep > 0 || j < Model.Count() - 1);
            }






















