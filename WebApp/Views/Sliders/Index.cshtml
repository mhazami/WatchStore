@using WebApp.App_Code.Base;
@model IEnumerable<ClockStore.DTO.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}



<div class="container-table100">
    <div class="wrap-table100">
        <div class="table100">
            <table>
                <tr class="table100-head">
                    <th class="column1">
                        Image
                    </th>
                    <th class="column2">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th class="column3">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th class="column4">
                        @Html.DisplayNameFor(model => model.IsMainSlider)
                    </th>
                    <th class="column5"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="column1">
                            <img alt="@item.Title" src="@FileManager.ImageHandler(item.FileId)" style="max-height:100px;max-width:100px;" />
                        </td>
                        <td class="column2">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="column3">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="column4">
                            @Html.DisplayFor(modelItem => item.IsMainSlider)
                        </td>
                        <td class="column5">
                            @Html.ActionLink("Edit", "Edit", new { id = item.SliderId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.SliderId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.SliderId })
                        </td>
                    </tr>
                }

            </table>
            <p>
                @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-info" })
            </p>
        </div>
    </div>
</div>