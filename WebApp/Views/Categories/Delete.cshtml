@model ClockStore.DTO.Category
@using WebApp.App_Code.Base;
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<div>
    <div class="clearfix" style="margin-top:50px"><h3>آیا از حذف این برند اطمینان دارید؟</h3></div>
    <hr />
    <div class="dl-horizontal">

        <div class="container">

            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        عنوان
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="CategoryName" value="@Model.CategoryName" name="CategoryName" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        تصویر
                    </div>
                    <div class="col-md-8">
                        <img src="@Url.Action("ShowImage", "Home", new { id = Model.FileId })" class="thumbnail" width="100" height="100" />
                    </div>
                </div>
            </div>




            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        <div class="col-md-4 text-center">

                        </div>
                        <div class="col-md-8">
                            <input type="submit" value="خذف" class="btn btn-danger" />
                            @Html.ActionLink("بازگشت", "Index", "", new { @class = "btn  btn-primary" })
                        </div>
                    </div>
                    <div class="col-md-6"></div>
                </div>

            }
        </div>
    </div>







</div>

