@model IEnumerable<ClockStore.DTO.Category>
@using WebApp.App_Code.Base;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<p style="margin:3% 40% 0 0;">
    @Html.ActionLink("تعریف برند جدید", "Create", "", new { @class = "btn btn-info" })

</p>
<div class="container-table100">
    <div class="wrap-table100">
        <div class="table100">
            <table class="table">
                <tr class="table100-head">
                    <th class="column1">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th class="column2">
                        تصویر
                    </th>
                    <th class="column3"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="column1">
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <th class="column2">
                            <img alt="@item.CategoryName" src="@Url.Action("ShowImage", "Home", new { id = item.FileId })" style="max-height:100px;max-width:100px;" />
                        </th>
                        <td class="column3">
                            @Html.ActionLink("ویرایش", "Edit", new { id = item.CategoryId }) |
                            @Html.ActionLink("جزییات", "Details", new { id = item.CategoryId }) |
                            @Html.ActionLink("حذف", "Delete", new { id = item.CategoryId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>