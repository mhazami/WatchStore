@using WebApp.App_Code.Base;
@model IEnumerable<ClockStore.DTO.ExtraImages>

@{
    ViewBag.Title = "ProductImages";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}


<div class="container">
    <button type="button" data-toggle="collapse" class="btn btn-primary" data-target="#create">Add Image</button>
    <span>
        <a href="/Products/Index" class="btn btn-warning">Back To Products List</a>
    </span> 
    <div class="clearfix"> </div>
    <div id="create" class="collapse">
        @using (Html.BeginForm("ProductImages", "ExtraImages", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div class="form-horizontal">
            <hr />
            <div cass="form-group">
                <label class="control-label col-md-2">Image</label>
                <div class="col-md-10">
                    <input type="file" id="file" name="file" />
                </div>
            </div>
            <input type="hidden" name="id" value="@ViewBag.ProductId" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Insert" class="btn btn-default" />
                </div>
            </div>
        </div>
        }
    </div>
</div>
<div class="clearfix"> </div>
<div class="container-table100">
    <div class="wrap-table100">
        <div class="table100">
            <table>
                <tr class="table100-head">
                    <th class="column1">
                        @Html.DisplayNameFor(model => model.Product.Code)
                    </th>
                    <th class="column2">
                        Image
                    </th>
                    <th class="column3"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="column1">
                            @Html.DisplayFor(modelItem => item.Product.Code)
                        </td>
                        <td class="column2">
                            <img alt="@item.Product.ProductName" src="@FileManager.ImageHandler(item.FileId)" style="max-height:100px;max-width:100px;" />
                        </td>
                        <td class="column3">
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.ExtraImagesId }) |*@
                            @*@Html.ActionLink("Details", "Details", new { id = item.ExtraImagesId }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.ExtraImagesId},new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>



