@model ClockStore.DTO.Category
@using WebApp.App_Code.Base;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}
@using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CategoryId)
    <div class="form-horizontal">
        <div class="clearfix" style="margin-top:50px"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        انتخاب زبان
                    </div>
                    <div class="col-md-8">
                        @Html.Action("GenerateLanguageDropDownList", "Language", null)
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        عنوان
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="CategoryName" value="@Model.CategoryName" name="CategoryName" class="form-control" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        تصویر
                    </div>
                    <div class="col-md-8">
                        <input type="file" id="image" class="form-control" name="image" />
                        <img src="@Url.Action("ShowImage", "Home", new { id = Model.FileId })" style="width:100px;height:100px;" class="thumbnail" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">

                    </div>
                    <div class="col-md-8">
                        <input type="submit" value="دخیره" class="btn btn-success" />
                        @Html.ActionLink("بازگشت", "Index", "", new { @class = "btn  btn-primary" })
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>
        </div>
    </div>
}
