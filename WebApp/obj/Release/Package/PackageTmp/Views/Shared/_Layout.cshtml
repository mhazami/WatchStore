<body>


    <div class="top-header">
        <div class="container">
            <div class="top-header-main">
                <div class="col-md-6 top-header-left">
                    <div class="drop">
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="col-md-6 top-header-left">
                    <div class="cart box_1">
                        <a href="/Baskets/CheckOut">
                            <div class="total">
                                @*<span class="simpleCart_total"></span>*@
                            </div>
                            <img src="~/images/cart-1.png" alt="" />
                        </a>
                        <p><a href="javascript:;" class="simpleCart_empty">Empty Cart</a></p>
                        @{
                            if (Session["Customer"] != null)
                            {
                                var customer = (ClockStore.DTO.Customer)Session["Customer"];
                                <p style="color:white">@customer.FullName</p>
                            }
                            else
                            {
                                <p>
                                    <a href="/Customers/Signin">Signin /</a>

                                    <a href="/Customers/Create">Register</a>

                                </p>
                            }
                        }
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--top-header-->
    <!--start-logo-->
    <div class="logo">
        <a href="/Home/Index"><h1>TREND WATCH</h1></a>
    </div>
