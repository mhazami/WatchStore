@model ClockStore.DTO.Slider
@using WebApp.App_Code.Base;
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}


<h3>آیا مطمئن به حذف هستید؟</h3>
<div>

    <hr />
    <div class="dl-horizontal">

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        عنوان
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="Title" value="@Model.Title" name="Title" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        تصویر
                    </div>
                    <div class="col-md-8">
                        <img src="@Url.Action("ShowImage", "Home", new { id = Model.FileId })" class="thumbnail" width="100" height="100" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="col-md-4 text-center">
                    اسلاید اصلی است؟
                </div>
                <div class="col-md-8">
                    @{
                        if (Model.IsMainSlider)
                        {
                            <span>بله</span>
                        }
                        else
                        {
                            <span>خیر</span>
                        }
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-4 text-center">
                    لینک
                </div>
                <div class="col-md-8">
                    <input type="text" id="Link" value="@Model.Link" name="Link" class="form-control" readonly="readonly" />

                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-2 text-center">
                توضیحات
            </div>
            <div class="col-md-10">
                <textarea id="Description" name="Description" style="height:200px" readonly="readonly" class="form-control">@Model.Description</textarea>

            </div>


        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">

                    </div>
                    <div class="col-md-8">
                        <input type="submit" value="خذف" class="btn btn-danger" />
                        @Html.ActionLink("بازگشت", "Index", "", new { @class = "btn  btn-primary" })
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>

        }

    </div>
</div>

