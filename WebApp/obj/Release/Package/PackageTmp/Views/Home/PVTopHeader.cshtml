
@using System.Globalization;




<style>
    .cart box_1 a:hover {
        text-decoration: none;
    }
</style>


<div class="top-header">
    <div class="container">
        <div class="top-header-main">
            <div class="row">
                <div class="col-md-4  col-xs-4 top-header-left">
                    <div class="box_1" style="display:block;float:left">

                        @{
                            if (Session["Customer"] != null)
                            {
                                var customer = (ClockStore.DTO.Customer)Session["Customer"];
                                <p style="color:white">@customer.FullName</p>
                            }
                            else
                            {
                                <p>
                                    <a style="color:white" href="/Customers/Signin">@WebApp.Resources.Design.Design.Signin</a>

                                    <a style="color:white" href="/Customers/Create">@WebApp.Resources.Design.Design.Register</a>

                                </p>
                            }
                        }
                    </div>
                </div>
                <div class="col-md-4  col-xs-4 header-right">
                    @Html.Action("Search", "Home", null)
                </div>



                <div class="col-md-4 col-xs-4 top-header-left">
                    <div class="header-top-box">
                        @* @Html.Action("Loadlanguages", "Language", null)*@
                        <div class="cart box_1" style="display: block">
                            <a href="/Baskets/CheckOut">
                                <div class="total">
                                    @*<span class="simpleCart_total"></span>*@
                                </div>
                                <img src="~/images/cart-1.png" alt="" />
                            </a>



                            @*<div class="clearfix"> </div>*@
                        </div>
                        <div class="box_1" style="display: block">
                            @{
                                if (Session["Customer"] != null)
                                {
                                    <a href="/Customers/Logout" title="Logout">
                                        <div class="total">
                                            @*<span class="simpleCart_total"></span>*@
                                        </div>
                                        @*<img src="~/images/icon/if_exit.png" alt="" />*@
                                        <span class="glyphicon glyphicon-log-out" style="color: white"></span>
                                    </a>
                                }
                            }

                        </div>
                        <p><a href="/Baskets/CheckOut" class="simpleCart_empty">@ViewBag.Cart</a></p>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>

        @{
            if (CultureInfo.CurrentCulture.Name == "fa-IR")
            {
                <script src="~/Scripts/js/jQuery.persianNumbers-1.0.js"></script>
                <script>
                    $(document).ready(function () {

                        var price = $.persianNumbers($(".simpleCart_empty").text());
                        $(".simpleCart_empty").text(price);

                    })
                </script>

            }
        }

    </div>
</div>
