                    <input type="text" id="Count" value="@Model.Count" name="Count" class="form-control" />

                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-4 text-center">
                    کد کالا
                </div>
                <div class="col-md-8">
                    <input type="text" id="Code" value="@Model.Code" name="Code" class="form-control" required />

                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-2 text-center">
