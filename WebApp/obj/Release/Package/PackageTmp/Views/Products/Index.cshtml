@using WebApp.App_Code.Base;
@model IEnumerable<ClockStore.DTO.Product>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-info" })
</p>
<div class="container-table100">
    <div class="wrap-table100">
        <div class="table100">
            <table>
                <tr class="table100-head">
                  
                    <th class="column1">
                        Image
                    </th>
                    <th class="column2">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th class="column3">
                        @Html.DisplayNameFor(model => model.Price)
                    </th>


                    <th class="column4"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                      
                        <td class="column1">
                            <img alt="@item.ProductName" src="@FileManager.ImageHandler(item.FileId)" style="max-height:100px;max-width:100px;" />
                        </td>
                        <td class="column2">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td class="column3">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>

                        <td class="column4">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                        </td>
                    </tr>
                }

            </table>
            <p>
                @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-info" })
            </p>
        </div>
    </div>
</div>


