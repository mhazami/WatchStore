@using WebApp.App_Code.Base;
@model ClockStore.DTO.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}




<div>
    <div class="clearfix" style="margin-top:50px"><h3>آیا از حذف این محصول اطمینان دارید؟</h3></div>
    <hr />
    <div class="dl-horizontal">

        <div class="container">

            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        نام کالا
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="ProductName" value="@Model.ProductName" name="ProductName" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        تصویر کالا
                    </div>
                    <div class="col-md-8">
                        <img src="@Url.Action("ShowImage", "Home", new { id = Model.FileId })" class="thumbnail" width="100" height="100" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        قیمت کالا
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="Price" value="@Model.Price.ToString("N0")" name="Price" class="form-control" readonly="readonly" />

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        درصد تخفیف
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="Off" value="@Model.Off" readonly="readonly" name="Off" class="form-control" />

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        موجودی در انبار
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="Count" value="@Model.Count" readonly="readonly" name="Count" class="form-control" />

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-4 text-center">
                        کد کالا
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="Code" name="Code" value="@Model.Code" class="form-control" readonly="readonly" />

                    </div>
                </div>



            </div>


            <div class="row">

                <div class="col-md-2 text-center">
                    توضیحات
                </div>
                <div class="col-md-10">
                    <textarea id="Description" name="Description" style="height:200px" readonly="readonly" class="form-control">@Model.Description</textarea>

                </div>


            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        <div class="col-md-4 text-center">

                        </div>
                        <div class="col-md-8">
                            <input type="submit" value="خذف" class="btn btn-danger" />
                            @Html.ActionLink("بازگشت", "Index", "", new { @class = "btn  btn-primary" })
                        </div>
                    </div>
                    <div class="col-md-6"></div>
                </div>

            }

        </div>







    </div>
</div>
