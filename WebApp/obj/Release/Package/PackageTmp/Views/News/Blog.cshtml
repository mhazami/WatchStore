<section id="blog-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    @{
                        foreach (var item in Model)
                        {
                            <div class="col-lg-6 col-md-6">
                                <aside>
                                    <video id="@item.NewsId" src="@Url.Action("DownloadFile", "Home", new {fileId = item.VideoId})" controls="true"
                                           width="100%" height="257.14px" loop="true"></video>
                                    <div class="content-title">
                                        <div class="text-center">
                                            <h3><a href="#">@item.Title</a></h3>
                                        </div>
                                    </div>
                                    <div class="content-footer">
                                        <img class="user-small-img" src="@FileManager.ImageHandler(item.ImageId)" alt="@item.Title">
                                        <a href="/News/MoreInfo?id=@item.NewsId">
                                            <span style="font-size: 16px;color: #fff;">@Design.MoreInfo</span>
                                        </a>

                                    </div>
                                </aside>
                            </div>
                        }
                    }


